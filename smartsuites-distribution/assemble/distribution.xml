<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>final-distribution</id>
    <formats>
        <format>dir</format>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <baseDirectory>smartsuites-${project.version}</baseDirectory>

    <dependencySets>
        <!-- 打包war包 -->
        <dependencySet>
            <includes>
                <include>${project.groupId}:smartsuites-web</include>
            </includes>
            <useProjectArtifact>false</useProjectArtifact>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <outputDirectory>./lib</outputDirectory>
        </dependencySet>
        <!-- 打包解析器主程序 -->
        <dependencySet>
            <outputDirectory>./lib/interpreter</outputDirectory>
            <includes>
                <include>${project.groupId}:smartsuites-interpreter</include>
            </includes>
        </dependencySet>
        <!-- 打包主程序【包含传递性依赖】 -->
        <dependencySet>
            <outputDirectory>./lib</outputDirectory>
            <excludes>
                <exclude>${project.groupId}:smartsuites-interpreter</exclude>
                <exclude>${project.groupId}:smartsuites-web</exclude>
            </excludes>
            <useProjectArtifact>false</useProjectArtifact>
            <useTransitiveFiltering>true</useTransitiveFiltering>
        </dependencySet>
    </dependencySets>

    <fileSets>
        <!-- 打包License文件 -->
        <fileSet>
            <directory>./distribution/</directory>
            <includes>
                <include>./LICENSE</include>
            </includes>
            <outputDirectory>./</outputDirectory>
        </fileSet>
        <!-- 打包脚本文件 -->
        <fileSet>
            <directory>./distribution/bin</directory>
            <directoryMode>0755</directoryMode>
            <fileMode>0755</fileMode>
            <outputDirectory>./bin/</outputDirectory>
        </fileSet>
        <!-- 打包配置文件 -->
        <fileSet>
            <directory>./distribution/conf</directory>
            <excludes>
                <exclude>credentials.json</exclude>
                <exclude>interpreter.json</exclude>
                <exclude>notebook-authorization.json</exclude>
                <exclude>shiro.ini</exclude>
                <exclude>smartsuites-env.cmd</exclude>
                <exclude>smartsuites-env.sh</exclude>
                <exclude>smartsuites-site.xml</exclude>
            </excludes>
            <outputDirectory>./conf/</outputDirectory>
        </fileSet>
        <!-- 打包解析器依赖 -->
        <fileSet>
            <directory>./distribution/interpreter</directory>
            <outputDirectory>./interpreter/</outputDirectory>
        </fileSet>
        <!-- 打包notebook -->
        <fileSet>
            <directory>./distribution/notebook</directory>
            <outputDirectory>./notebook/</outputDirectory>
        </fileSet>
        <!-- 打包smart-interpreter的依赖 -->
        <fileSet>
            <directory>../smartsuites-interpreter/target/lib</directory>
            <outputDirectory>/lib/interpreter</outputDirectory>
        </fileSet>

        <!--<fileSet>
            <outputDirectory>/lib/node_modules/zeppelin-vis</outputDirectory>
            <directory>../smartsuites-web/src/app/components/visualization</directory>
        </fileSet>
        <fileSet>
            <outputDirectory>/lib/node_modules/zeppelin-tabledata</outputDirectory>
            <directory>../smartsuites-web/src/app/components/tabledata</directory>
        </fileSet>
        <fileSet>
            <outputDirectory>/lib/node_modules/zeppelin-spell</outputDirectory>
            <directory>../smartsuites-web/src/app/components/spell</directory>
        </fileSet>-->
    </fileSets>
</assembly>
